#!/bin/bash

#set variable for afterslide
AFTERSLIDE=False

#kill all running tasks
/var/www/sync/stopall

if [[ $AFTERSLIDE == "True" ]]; then 
#start video 06 once
/usr/bin/omxplayer-sync -m -o local /media/internal/video/06*
/var/www/sync/startimage > /dev/null &
fi

if  [[ $AFTERSLIDE == "False" ]]; then 
#start video 06 once
/usr/bin/omxplayer-sync -m -o local /media/internal/video/06* > /dev/null 2>&1 & echo $! &
fi


exit 0


